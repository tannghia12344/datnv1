platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Lấy đường dẫn tới Flutter SDK từ biến môi trường FLUTTER_ROOT (CodeMagic đã set dùm bạn)
flutter_root = ENV['FLUTTER_ROOT'] || File.realpath(File.join(__dir__, '..', '..'))
load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')


target 'Runner' do
  use_frameworks!
  use_modular_headers!

  install_all_flutter_pods(flutter_root)
end
